{
    "name": "ovh-ui-kit-bs",
    "version": "0.0.1",
    "description": "A LESS stylekit for the OVH brand.",
    "author": "OVH SAS",
    "license": "BSD-3-Clause",
    "main": "src/ovh-ui-kit-bs.less",
    "scripts": {
        "build": "npm run clean && npm run less && npm run copy",
        "clean": "rimraf dist",
        "copy": "cpx \"node_modules/ovh-ui-kit/dist/icons/*\" \"dist/icons\"",
        "less": "lessc --remcalc --clean-css \"src/ovh-ui-kit-bs.less\" \"dist/ovh-ui-kit-bs.css\"",
        "postinstall": "npm run build",
        "start": "npm install"
    },
    "devDependencies": {
        "bootstrap": "^3.3.7",
        "bower": "^1.8.0",
        "cpx": "^1.5.0",
        "less": "^2.7.2",
        "less-plugin-clean-css": "^1.5.1",
        "ovh-ui-kit": "git+https://github.com/ovh-ux/ovh-ui-kit.git#v1.0.0-alpha.13",
        "rimraf": "^2.6.1"
    }
}
