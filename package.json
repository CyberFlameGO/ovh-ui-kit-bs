{
  "name": "ovh-ui-kit-bs",
  "version": "2.1.1",
  "description": "A bootstrap theme for the OVH managers, based on ovh-ui-kit.",
  "bugs": {
    "url": "https://github.com/ovh-ux/ovh-ui-kit-bs/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ovh-ux/ovh-ui-kit-bs.git"
  },
  "license": "BSD-3-Clause",
  "author": "OVH SAS",
  "main": "dist/css/oui-bs3.css",
  "scripts": {
    "build": "run-s clean less docs",
    "clean": "rimraf dist docs/assets",
    "docs": "run-p docs:*",
    "docs:bs": "cpx \"node_modules/bootstrap/dist/**/*\" \"docs/assets/\"",
    "docs:oui": "cpx \"node_modules/@ovh-ux/ui-kit/dist/**/*\" \"docs/assets/\"",
    "docs:oui-bs": "cpx \"dist/**/*\" \"docs/assets/\"",
    "less": "lessc --remcalc --clean-css --source-map \"src/index.less\" \"dist/css/oui-bs3.css\"",
    "start": "open-cli docs/index.html"
  },
  "devDependencies": {
    "@ovh-ux/ui-kit": "^3.1.3",
    "bootstrap": "^3.4.1",
    "cpx": "^1.5.0",
    "less": "^3.9.0",
    "less-plugin-clean-css": "^1.5.1",
    "less-plugin-remcalc": "^0.1.0",
    "npm-run-all": "^4.1.5",
    "opn-cli": "^5.0.0",
    "rimraf": "^2.6.3",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0"
  },
  "peerDependencies": {
    "@ovh-ux/ui-kit": "^3.1.3",
    "bootstrap": "^3.4.1"
  }
}
