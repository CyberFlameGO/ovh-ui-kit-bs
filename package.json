{
  "name": "ovh-ui-kit-bs",
  "version": "2.4.0",
  "description": "A bootstrap theme for the OVH managers, based on ovh-ui-kit.",
  "bugs": {
    "url": "https://github.com/ovh-ux/ovh-ui-kit-bs/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ovh-ux/ovh-ui-kit-bs.git"
  },
  "license": "BSD-3-Clause",
  "author": "OVH SAS",
  "main": "src/ovh-ui-kit-bs.less",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s clean less copy",
    "clean": "rimraf dist",
    "copy": "run-p copy:*",
    "copy:fonts": "cpx \"node_modules/ovh-ui-kit/packages/oui-typography/fonts/**/*.{eot,svg,ttf,woff,woff2}\" \"assets/fonts\"",
    "copy:glyphicons": "cpx \"node_modules/bootstrap/fonts/*\" \"assets/fonts\"",
    "copy:icons": "cpx \"node_modules/ovh-ui-kit/dist/icons/*.{eot,svg,ttf,woff,woff2,html}\" \"assets/icons\"",
    "less": "run-p less:*",
    "less:debug": "lessc --remcalc \"src/_dist.less\" \"dist/ovh-ui-kit-bs.css\"",
    "less:dist": "lessc --remcalc --clean-css \"src/_dist.less\" \"dist/ovh-ui-kit-bs.min.css\"",
    "less:olt": "lessc --remcalc --clean-css \"src/ovhcloud-light-theme.less\" \"dist/oui-bs3-olt.css\"",
    "less:vendor": "lessc --remcalc --clean-css \"src/_vendor.less\" \"assets/vendor.min.css\"",
    "open": "opn index.html",
    "start": "npm run open"
  },
  "devDependencies": {
    "bootstrap": "^3.4.1",
    "cpx": "^1.5.0",
    "less": "^3.11.1",
    "less-plugin-clean-css": "^1.5.1",
    "less-plugin-remcalc": "^0.1.0",
    "npm-run-all": "^4.1.5",
    "opn-cli": "^5.0.0",
    "ovh-ui-kit": "~2.42.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^20.0.0"
  },
  "peerDependencies": {
    "bootstrap": "^3.4.1",
    "less-plugin-remcalc": "^0.1.0",
    "ovh-ui-kit": "~2.42.1"
  }
}
